<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">new dawn technologies</h1>
            <p class="lead">submit a dirty computer for cleaning or track its progress</p>
        </div>
    </div>
    <div class="container"> <!-- ul logging all dirty computers ('burger log')-->
    <div class="row">
        <div class="col-sm">
            <h1>dirty computers</h1>
            <ul>
                {{#each dirty_computers}}
                <!-- eventually, unless cleanned -->
                {{/each}}
            </ul>
        </div>
    </div>
    </div>

    <hr>

    <div class="container"><!-- display recently added for cleaning ('devour a burger')--></div>

    <hr>

    <div class="container"> <!-- form to submit a new computer for cleaning ('add a burger')-->
        <div class="row">
            <div class="col-sm">
                <h2>submit a dirty computer for cleaning</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="dc_name">dirty computer name</label>
                        <input type="text" id="dc_name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="dc_name">memory to be erased</label>
                        <input type="text" id="dc_memory_1" name="dc_memory_1">
                    </div>
                    <div class="form-group">
                        <label for="cleaned">cleaned?</label><br>
                        <input type="radio" name="cleaned" value="1" checked> cleaned<br>
                        <input type="radio" name="cleaned" value="0"> dirty
                    </div>
                    <button type="submit">submit dirty computer</button>
                </form>
            </div>
        </div>
    </div>
    <!--footer-->
    <footer class="footer mt-auto py-3">
        <div class="container">
        <span class="text-muted">system x.v-0.21467</span>
        </div>
